<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:paddingTop="22dp"
  android:paddingLeft="23dp"
  android:paddingBottom="21dp"
  android:paddingRight="24dp">

  <ImageView
    android:id="@+id/post_image"
    android:layout_width="92dp"
    android:layout_height="61dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

  <TextView
    android:id="@+id/post_title"
    android:text="타이틀"
    android:textColor="@color/_000000"
    android:textSize="14dp"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="21dp"
    app:layout_constraintLeft_toRightOf="@+id/post_image"
    app:layout_constraintTop_toTopOf="parent"/>

  <TextView
    android:id="@+id/post_date"
    android:text="~~~~~~~까지"
    android:textColor="@color/_000000"
    android:textSize="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="21dp"
    app:layout_constraintLeft_toRightOf="@+id/post_image"
    app:layout_constraintBottom_toBottomOf="parent"/>

  <TextView
    android:id="@+id/text_post_like_prgoress"
    android:text="좋아요 "
    android:textColor="@color/_000000"
    android:textSize="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    app:layout_constraintLeft_toRightOf="@+id/post_date"
    app:layout_constraintBottom_toBottomOf="parent"/>

  <TextView
    android:id="@+id/post_like_prgoress"
    android:text="63"
    android:textColor="@color/_516DC4"
    android:textSize="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2dp"
    app:layout_constraintLeft_toRightOf="@+id/text_post_like_prgoress"
    app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>